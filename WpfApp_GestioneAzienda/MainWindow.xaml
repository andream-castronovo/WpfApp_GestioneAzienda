<Window x:Class="WpfApp_GestioneAzienda.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_GestioneAzienda"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="800"
        Loaded="Window_Loaded">

    <Grid>
        
        <Grid Width="400" Height="300" HorizontalAlignment="Left" Margin="5,0,0,0">
            <!--Griglia dati-->
            <Grid.RowDefinitions>
                <RowDefinition Height=".3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height=".3*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                <RadioButton Name="rdbCliente" Content="Cliente" Checked="rdb_Checked"/>
                <RadioButton Name="rdbImpiegato" Content="Impiegato" Margin="10,0,0,0" Checked="rdb_Checked"/>
            </StackPanel>

            <!--Griglia nome e cognome-->
            <Grid Grid.Row="1"  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label  HorizontalContentAlignment="Right" Grid.Row="0" Grid.Column="0" Content="Nome " VerticalAlignment="Top" Padding="4"/>
                <Label  HorizontalContentAlignment="Right" Grid.Row="0" Grid.Column="2" Content="Cognome " VerticalAlignment="Top" Padding="4"/>

                <TextBox Grid.Row="0" Grid.Column="1" Name="txtName" VerticalAlignment="Top" Padding="4" />
                <TextBox Grid.Row="0" Grid.Column="3" Name="txtSurname" VerticalAlignment="Top" Padding="4"/>
            </Grid>

            <!--Griglia impiegato-->
            <Grid x:Name="grdImpiegato" Grid.Row="2" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Stipendio annuo" HorizontalContentAlignment="Left" VerticalAlignment="Top" Padding="4"/>
                <TextBox Grid.Column="1" x:Name="txtStipendio" Padding="4" VerticalAlignment="Top"/>
            </Grid>
            
            <!--Griglia cliente-->
            <Grid x:Name="grdCliente" Grid.Row="2" Visibility="Visible">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="2">
                    <Label Content="Acquisti effettuati" HorizontalContentAlignment="Left" VerticalAlignment="Top" Padding="4"/>
                    <ListBox Name="lstAcquisti" Padding="4" MinHeight="20" MaxHeight="90" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="3,0,3,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                    <Button x:Name="btnAggiungiAcquisto" Content="_Aggiungi acquisto" Click="btnAggiungiAcquisto_Click"/>
                    <Button x:Name="btnRimuoviAcquisto" Content="Rimuovi acquisto" Margin="0,5,0,0"/>
                    <Button x:Name="btnModifcaAcquisto" Content="Modifica acquisto" Margin="0,5,0,0"/>
                </StackPanel>

                <Grid Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                </Grid>
            </Grid>

            <Button Grid.Row="3" Content="Aggiungi" Width="100" x:Name="btnAddPerson" Click="btnAddPerson_Click"/>
        </Grid>
    </Grid>
        
</Window>
